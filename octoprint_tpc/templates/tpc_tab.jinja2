<div class="input-append">
    <input type="text" class="input" data-bind="value: newUrl">
    <button class="btn btn-primary" data-bind="click: goToUrl">{{ _('Go') }}</button>
</div>


<iframe data-bind="attr: {src: currentUrl}" style="width: 100%; height: 600px; border: 1px solid #808080"></iframe>
<br>
<table id="calibration-table" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col" title="Dieser Button starten die Kalibration des Tools">Start</th>
            <th scope="col">Offset X</th>
            <th scope="col">Offset Y</th>
            <th scope="col">Offset Z</th>
            <th scope="col">Save</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">Tool 0</th>
            <td class="start-cali" style="width: 30px">
                <form class="form-inline" style="margin: 0">
                    <button class="btn btn-primary" title="Start Kalibration of Tool XXX" data-bind="click: function(){start_calibration();}, text: stage">Start</button>
                </form>
            </td>
            <td class="gcode_offset">
                <form class="form-inline" style="margin:0">
                    <div class="input-append">
                        <span class="input uneditable-input" style="width: 30px" ><span data-bind="text: offsetTX"></span></span>
                        <button class="btn" title="Offset ändern"><i class="fa fa-pencil"></i></button>
                    </div>
                </form>
            </td>
            <td class="gcode_offset">
                <form class="form-inline" style="margin:0">
                    <div class="input-append">
                        <span class="input uneditable-input" style="width: 30px" ><span data-bind="text: offsetTY"></span></span>
                        <button class="btn" title="Offset ändern"><i class="fa fa-pencil"></i></button>
                    </div>
                </form>
            </td>
            <td class="gcode_offset">
                <form class="form-inline" style="margin:0">
                    <div class="input-append">
                        <span class="input uneditable-input" style="width: 30px" ><span data-bind="text: offsetTZ"></span></span>
                        <button class="btn" title="Offset ändern"><i class="fa fa-pencil"></i></button>
                    </div>
                </form>
            </td>
            <td class="save-offset">
                <form class="form-inline" style="margin:0">
                    <div class="btn-group">
                        <button class="btn btn-primary" title="Save Offsets for Tool XXX" data-bind="click: ledOn">Sa</button>
                        <button class="btn btn-danger" title="Stop calibration" data-bind="click: function(){stop_calibration();}">St</button>
                    </div>
                </form>
            </td>
        </tr>
    </tbody>
</table>
<div class="row-fluid">
	<div class="input-append span6">
		<label for="offset_z_travel">Z Travel Height</label>
		<input class="input-mini text-right" type="number" id="offset_z_travel" step="1" min="0" data-bind="value: offsetTX"/>
		<div class="add-on">
			<span class="input-group-text" id="basic-addon2">mm</span>
		</div>
	</div>
</div>
