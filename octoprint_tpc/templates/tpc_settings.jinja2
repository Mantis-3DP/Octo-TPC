<h3>TPC</h3>
<form class="form-horizontal">
    <div class="control-group">
        <legend>Enable Preheating Ãœberschrift</legend>
        <label class="control-label">Enable tool preheating</label>
            <div class="controls">
                <input type="checkbox" class="input-block-level" data-bind="checked: settings.plugins.tpc.enable_tool">
            </div>
        <br>  {# leer Zeile #}
        <legend>URL Settings</legend>
        <label class="control-label">{{ _('URL') }}</label>
            <div class="controls">
                <label>
                    <input type="text" class="input-block-level" data-bind="value: settings.plugins.tpc.url">
                </label>
            </div>
    </div>
    <div class="control-group">
    <legend>Position Settings</legend>
    <label class="control-label">Nozzle Temp:</label>
        <div class="controls">
          <input type="number" step="1" data-bind="value: settings.plugins.tpc.nozzle_temp">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Feed Rate (how fast the x/y axes move):</label>
            <div class="controls">
              <input type="number" step="100" data-bind="value: settings.plugins.tpc.feed_rate">
            </div>
    </div>

    <!-- camera settings         -->
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#camera-settings"><h4>{{ _('Camera') }}</h4></a>
            </div>
            <div id="camera-settings" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="row-fluid">
                        <div class="span4"><h4>{{ _('Camera position') }}</h4></div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">You can fill the position manually or position the Tool above the camera und press "Save Camera Position"
                        </div>
                    </div>
                    <div class="row-fluid">
                        <label class="control-label" for="camera.position.x">X</label>
                        <div class="controls">
                            <div class="input-append">
                                <input id="camera.position.x" type="number" step="1" class="input-mini text-right" data-bind="value: settings.plugins.tpc.camera.x">
                                <span class="add-on">mm</span>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <label class="control-label" for="camera.position.y">Y</label>
                        <div class="controls">
                            <div class="input-append">
                                <input id="camera.position.y" type="number" step="1" class="input-mini text-right" data-bind="value: settings.plugins.tpc.camera.y">
                                <span class="add-on">mm</span>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <label class="control-label" for="camera.position.z">Z</label>
                        <div class="controls">
                            <div class="input-append">
                                <input id="camera.position.z" type="number" step="1" class="input-mini text-right" data-bind="value: settings.plugins.tpc.camera.z">
                                <span class="add-on">mm</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</form>



